generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  tgId      Int
  name      String
  role      String?
  status    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt // отдел
}
